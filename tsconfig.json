{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "lib": ["es2017"],
    "types": [],
    "typeRoots": ["node_modules/@types"]
  },
  "files": [
    "src/index.ts",
    "src/javascript.ts",
    "src/logic.ts",
    "src/options.ts",
    "src/smt.ts",
    "src/util.ts",
    "src/vcgen.ts",
    "src/verification.ts"
  ],
  "compileOnSave": false
}
