{
  "name": "esverify",
  "version": "0.0.0-development",
  "description": "ECMAScript verification with SMT solvers",
  "author": "Christopher Schuster <cs@livoris.net>",
  "license": "MIT",
  "main": "dist/esverify.js",
  "files": [
    "bin",
    "esverify.js"
  ],
  "bin": {
    "esverify": "./bin/esverify.js"
  },
  "engines": {
    "node": ">=7"
  },
  "bugs": {
    "url": "https://github.com/levjj/esverify/issues"
  },
  "homepage": "https://github.com/levjj/esverify#readme",
  "scripts": {
    "lint": "tsc --noEmit && tslint --project . --type-check -e **/node_modules/** -t codeFrame index.ts src/*.ts",
    "test": "TS_NODE_DISABLE_WARNINGS=true mocha -r ts-node/register tests/*.ts",
    "build": "webpack --debug",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm run lint && npm test && npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/levjj/esverify.git"
  },
  "dependencies": {
    "@types/esprima": "^2.1.33",
    "@types/estree": "0.0.35",
    "esprima": "^3.1.3",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "chai": "^3.5.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.3",
    "mocha": "^3.4.1",
    "semantic-release": "^6.3.6",
    "ts-loader": "^1.3.3",
    "ts-node": "^1.7.3",
    "tslint": "^5.3.2",
    "tslint-config-standard": "^5.0.2",
    "typescript": "^2.3.2",
    "validate-commit-msg": "^2.12.1",
    "webpack": "^1.15.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format (https://github.com/commitizen/cz-cli)"
    }
  }
}
